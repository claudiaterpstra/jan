<div class="container">
  <h2>Contact</h2>
  <%= simple_form_for @contact, class: 'form-horizontal' do |f| %>
  <%= f.input :name, :required => true %>
  <%= f.input :email, :required => true %>
  <%= f.input :message, :as => :text, :required => false, :input_html => {:rows => 10} %>
  <%= f.submit "Versturen", class: 'btn btn-primary' %>
  <% end %>
</div>
